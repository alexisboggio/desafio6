<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Formulario Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
  <body>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/static/main.js"></script>
    <div class="container text-center">
        <div class="row">
          <div class="col">
          </div>
          <div class="col">
            <form class="formdata" method="POST" action="/productos">
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label">titulo</label>
                  <input type="text" name="title" class="form-control" id="title" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label">precio</label>
                  <input type="text" name="price" class="form-control" id="price">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">imagen</label>
                    <input type="text" name="thumbnail" class="form-control" id="thumbnail">
                  </div>
                <button onclick="addProduct()" type="button" class="btn btn-primary" >Guardar</button>
              </form>
          </div>
          <div class="col">
          </div>
        </div>
      </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <style>
        .formdata{
            padding: 15px;
            border: 1px solid grey
        }
    </style>
     <div class="container text-center">
      <div class="row">
        <div class="col">
        </div>
        <div class="col">
          <table class="table">
              <% if(product.lenght == 0) { %>
                  <div class="alert alert-danger" role="alert">
                      No tenemos productos!
                    </div>
              <% } else{  %>
              <thead>
                <tr>
                  <th scope="col">Titulo</th>
                  <th scope="col">Precio</th>
                  <th scope="col">Imagen</th>
                </tr>
              </thead>
              <tbody>
                  <% product.forEach(i => { %>
                <tr>
                  <td><%= i.title %></td>
                  <td><%= i.price %></td>
                  <td><%= i.thumbnail %></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
            <% }; %>
            <ul id="productList" ></ul>
          </form>
        </div>
        <div class="col">
        </div>
      </div>
    </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <h1>Sala de chat </h1>
    <script src="/main.js"></script>
        <ul id="messageList"></ul>
        <input type="text" id="username" placeholder="mail">
        <input type="text" id="message" placeholder="message">
        <button onclick="sendNewMessage()">Send</button>
 

  </body>
</html>